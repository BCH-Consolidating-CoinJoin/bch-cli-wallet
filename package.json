{
  "name": "bch-cli-wallet",
  "description": "A command line wallet for Bitcoin Cash, built with BITBOX",
  "version": "1.0.0",
  "author": "Chris Troutner @christroutner",
  "bin": {
    "mynewcli": "./bin/run"
  },
  "bugs": "https://github.com/christroutner/bch-cli-wallet/issues",
  "dependencies": {
    "@oclif/command": "^1.5.4",
    "@oclif/config": "^1.8.8",
    "@oclif/plugin-help": "^2.1.3",
    "bitbox-sdk": "^2.0.4",
    "prettier": "^1.14.3",
    "shelljs": "^0.8.2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.19.3",
    "@oclif/test": "^1.2.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "globby": "^8.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/christroutner/bch-cli-wallet",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "oclif": {
    "commands": "./src/commands",
    "bin": "bch-cli-wallet",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "christroutner/bch-cli-wallet",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "test": "nyc --reporter=text mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "version": "oclif-dev readme && git add README.md"
  }
}
